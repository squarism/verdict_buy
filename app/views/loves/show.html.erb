<% content_for :javascript_includes do %>
  <%= javascript_include_tag "views/love_show.js" %>
<% end %>

<style type="text/css">
#detail {margin:0.25em;; width:550px; height:300px; font-family: georgia;}
#info-panel-left { float: left; width:20%; padding-top: 2em; height:100%;}
#info-panel-right { float: right; width:50%; padding-right:1em; padding-top: 2em; clear:none; margin-right:50px;}
.form-label { float:left; padding:0px; margin:0px; font-family: georgia; }
.form-input { float:right; padding:0px; margin:0px; /*font-size: 12px;*/ }
.form-input input { width: 220px; height:12px; font-family: courier; font-size:11px;}

#attributes { font-size: 12px; width:350px; height:90px; padding:2px; margin:0.25em; border:1px solid black;}
.left { float:left; width:35%; height:100%; border:1px solid black;}
.right { float:left; width:60%; height:100%; white-space:nowrap; overflow:hidden; border:1px solid black;}
#description { clear:both; margin:0.25em; padding:2px; border:1px solid black;}

</style>


<!-- begin content -->
<div id="detail">
  
  
<div id="info-panel-left">
  <%= art_thumb 6 %>
  <div class="ui-widget">
  	Result:
  	<div id="log" style="height: 100px; width: 200px; overflow: auto;" class="ui-widget-content"></div>
  </div>
</div>

<div id="info-panel-right">
  <div class="ui-widget">
    <%= form_for @love do |love_form| %>
      <div class="form-label">Title:</div>
      <div class="form-input">
        <%= love_form.text_field :gb_title, :class=>'autosearch' %>
      </div>
      <%= love_form.hidden_field :gb_id %>
      <%= love_form.hidden_field :id %>
    <% end %>
    <%# text_field_tag :search_1, nil, :class => 'autosearch', :value => "#{@love.gb_title}" %> <br>
    <%# text_field_tag :gbid_1, nil, :class => 'game_id' %> <br>
  </div>
  
  <%= render "attributes" %>
</div>

<!-- end content -->
</div>


