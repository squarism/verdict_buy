<h1>Job Index</h1>

<table>
<th>ID</th>   <th>Name</th>   <th>Attempts</th>   <th>Last Error</th>
<% @jobs.each do |j| %>
<tr>
  <td><%= j.id %></td>
  <td><%= j.name %></td>
  <td><%= j.attempts %></td>
  <td width="50%"><%= shorten_last_error(j.last_error) %></td>
  <td><%= link_to 'destroy', job_url(j), :method => :delete, :confirm => "Are you sure?" %></td>
  <!-- button works too 
  <td><%# button_to "delete", job_url(j), :method=>:delete, :class=>:destroy %></td>
  -->
</tr>
<% end %>
</table>

<hr>

<br>

<strong>States</strong>
<p>
  States: <%= @job_states.size %><br>
  First: <%= @job_states.first.name unless @job_states.size < 1 %>
</p>

